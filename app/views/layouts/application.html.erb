<!DOCTYPE html>
<html>
  <head>
    <title>Sharewise</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/f6eb215aef.js" crossorigin="anonymous"></script>
  </head>

  <body>
<!-- ヘッダー部分 -->
<header class="custom-header py-3">
  <div class="container-fluid px-5 d-flex justify-content-between align-items-center">
    <!-- アイコンリンク部分 -->
    <% if admin_signed_in? %>
      <div>
        <%= link_to admin_path, class: (current_page?(admin_path) ? 'text-decoration-none active' : 'text-decoration-none') do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
      </div>
    <% elsif user_signed_in? %>
      <div class="d-flex align-items-center">
        <%= link_to root_path, class: (current_page?(root_path) ? 'text-decoration-none active' : 'text-decoration-none') do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
      </div>
    <% else %>
      <div>
        <%= link_to root_path, class: (current_page?(root_path) ? 'text-decoration-none active' : 'text-decoration-none') do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
      </div>
    <% end %>

    <!-- ログイン別のメニュー部分 -->
<div>
  <% if admin_signed_in? %>
    <%= link_to 'user一覧', admin_users_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(admin_users_path)}" %>
    <%= link_to 'post一覧', admin_posts_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(admin_posts_path)}" %>
    <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'header-link text-decoration-none hover-effect mx-3', data: { confirm: 'ログアウトしますか？' } %>
  <% elsif user_signed_in? %>
    <%= link_to 'マイページ', mypage_users_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(mypage_users_path)}" %>
    <%= link_to 'user一覧', users_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(users_path)}" %>
    <%= link_to 'post一覧', posts_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(posts_path)}" %>
    <%= link_to '新規投稿', new_post_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(new_post_path)}" %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'header-link text-decoration-none hover-effect mx-3', data: { confirm: 'ログアウトしますか？' } %>
  <% else %>
    <%= link_to 'user一覧', users_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(users_path)}" %>
    <%= link_to 'post一覧', posts_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(posts_path)}" %>
    <%= link_to 'ログイン', new_user_session_path, class: "header-link text-decoration-none hover-effect mx-3 #{'active' if current_page?(new_user_session_path)}" %>
  <% end %>
</div>
  </div>
</header>

    <main class="main-content py-5">
    <%= yield %>
    </main>
    <footer class="custom-footer pt-3"></footer>
  </body>
</html>
