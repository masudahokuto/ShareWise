<%= stylesheet_link_tag 'public/users', media: 'all' %>
<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="side-content col-sm-12 col-md-12 col-lg-2 d-flex flex-column align-items-center">
      <%= render 'public/users/user_card', user: @current_user %>
      <%= render 'public/content_names' %>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-9">
      <div class="d-flex justify-content-center align-items-center">
        <%= render 'searches/search_form' %>
        <span class="mx-2">
          <%= link_to '人気のユーザー', users_path(sort: 'follower_count') %> |
          <%= link_to '最新のユーザー', users_path(sort: 'recent') %>
        </span>
      </div>
      <% if @users.present? %>
        <div class="user-list">
          <%= render 'public/users/user_index', users: @users %>
        </div>
        <!-- ページネーション -->
        <div id="pagination">
          <%= paginate @users %>
        </div>
      <% else %>
        <p>検索結果がありません。</p>
      <% end %>
    </div>
  </div>
</div>