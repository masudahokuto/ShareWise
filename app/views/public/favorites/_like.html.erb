<%= link_to post_favorite_path(post), method: post.favorited_by?(current_user) ? :delete : :post, remote: true, class: 'favorite-link' do %>
  <% if post.favorited_by?(current_user) %>
    <i class="fa-solid fa-heart" style="color: red;"></i>
    <span style="color: red; font-weight: bold"><%= post.favorites.count %></span>
  <% else %>
    <i class="fa-regular fa-heart" style="color: red;"></i>
    <span style="color: red; font-weight: bold"><%= post.favorites.count %></span>
  <% end %>
<% end %>
