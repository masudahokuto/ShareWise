<%= stylesheet_link_tag 'public/users', media: 'all' %>
<div class="container-fluid">
  <div class="row d-flex">
    <div class="col-md-2 d-flex flex-column align-items-center">
      <%= render 'public/users/user_card', user: @user, followeds_count: @followers_count, followers_count: @followers_count %>
       <% if @current_user %>
        <%= link_to 'プロフィール編集', edit_user_path(@current_user), class: 'btn btn-primary mt-3' %>
      <% end %>
      <%= render 'public/content_names' %>
    </div>
    <div class="col-md-10">
      <h4><%= @user.nick_name %>さんをフォローしているUser</h4>
      <% if @followers.any? %>
        <div id="admin-users-list" class="row">
          <% @followers.each_slice(5) do |followers_slice| %>
            <% followers_slice.each do |user| %>
              <%= render 'user_card_follors', user: user %>
            <% end %>
          <% end %>
        </div>
        <div class="pagination">
          <%= paginate @followers %>
        </div>
      <% else %>
        <p>フォローしているユーザーはいません。</p>
      <% end %>
    </div>
  </div>
</div>