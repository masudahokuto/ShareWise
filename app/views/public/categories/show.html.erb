<h1><%= @category.category_name %> カテゴリー詳細</h1>

<%= form_with(model: [@category, @title], url: category_titles_path(@category), method: :post, local: true) do |f| %>
  <div>
    <%= f.label :title_name, "タイトル名" %>
    <%= f.text_field :title_name %>
  </div>
  <div>
    <%= f.submit "タイトルを登録" %>
  </div>
<% end %>

<ul>
  <% @titles.each do |title| %>
    <li>
      <%= link_to title.title_name, category_title_path(title) %>
      <%= link_to "削除", category_title_path(@category, title), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'カテゴリ一覧へ戻る', new_category_path %></p>
